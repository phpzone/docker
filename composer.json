{
    "name":        "phpzone/docker",
    "description": "A Docker command builder configured by YAML, based on PhpZone",
    "type":        "library",
    "license":     "MIT",
    "authors":     [
        {
            "name":  "Jakub Zapletal",
            "email": "zapletal.jakub@gmail.com"
        }
    ],

    "require": {
        "php":                          ">=5.3",
        "phpzone/phpzone":              "0.2.*@beta",
        "symfony/dependency-injection": "~2.3",
        "symfony/options-resolver":     "~2.3",
        "symfony/config":               "~2.3",
        "phpzone/shell":                "0.2.*@beta"
    },

    "require-dev": {
        "behat/behat":                         "~3.0",
        "phpspec/phpspec":                     "~2.2",
        "squizlabs/php_codesniffer":           "~2.3",
        "jakubzapletal/php_codesniffer-rules": "~0.1",
        "bossa/phpspec2-expect":               "~1.0",
        "phpunit/phpunit":                     "~4.6"
    },

    "autoload": {
        "psr-4": {
            "PhpZone\\Docker\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "PhpZone\\Behat\\": "features/bootstrap"
        }
    },

    "conflict": {
        "phpzone/phpzone":  "0.1.*"
    },

    "scripts": {
        "test": "phpzone tests"
    },

    "extra": {
        "branch-alias": {
            "dev-master": "0.2.x-dev"
        }
    }
}
